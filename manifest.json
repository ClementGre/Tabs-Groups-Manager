{
  "description": "Sync tabs between clients and make custom tabs groups",
  "homepage_url": "https://github.com/clementgre",
  "version": "0.0.1",
  "manifest_version": 2,
  "author": "Cl√©ment Grennerat",
  "manifest_version": 2,
  "name": "Tabs Manager",

  "developer": {
    "name": "Clement Grennerat",
    "url": "https://github.com/clementgre/"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "tabs.manager@clement.grennerat.fr",
      "strict_min_version": "71.0"
    }
  },

  "background": {
    "persistent": true,
    "scripts": ["background.js"]
  },

  "browser_action": {
    "browser_style": true,
    "default_title": "Tabs Manager",
    "default_popup": "index.html"
  },

  "permissions": [
    "tabs",
    "activeTab",
    "tabHide",
    "menus",
    "webRequest",
    "<all_urls>",
    "storage",
    "unlimitedStorage"
    ]
}
