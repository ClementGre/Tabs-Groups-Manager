{
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "58.0a1"
    }
  },
  "background": {
      "scripts": ["background.js"]
  },
  "browser_action": {
    "browser_style": true,
    "default_title": "Tabs Manager",
    "default_popup": "index.html"
  },
  "description": "Sync tabs between clients and make custom tabs groups",
  "homepage_url": "https://github.com/clementgre",
  "version": "0.0.1",
  "manifest_version": 2,
  "name": "Tabs Manager",

  "permissions": [
    "tabs",
    "tabHide",
    "notifications",
    "menus",
    "contextualIdentities",
    "cookies",
    "sessions",
    "downloads",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "storage",
    "unlimitedStorage",
    "bookmarks"
    ]
}
